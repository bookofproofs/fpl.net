<plist version="1.0">
<dict>
    <key>$schema</key>
    <string>https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json</string>
    <key>name</key>
    <string>Formal Proving Language</string>
    <key>patterns</key>
    <array>
        <dict>
            <key>include</key>
            <string>#longComments</string>
        </dict>
        <dict>
            <key>include</key>
            <string>#shortComments</string>
        </dict>
        <!-- Add the rest of your patterns here -->
    </array>
    <key>repository</key>
    <dict>
        <key>longComments</key>
        <dict>
            <key>patterns</key>
            <array>
                <dict>
                    <key>name</key>
                    <string>longComments.fpl</string>
                    <key>match</key>
                    <string>\/*((?:.|\n)*?)*\/</string>
                </dict>
            </array>
        </dict>
        <!-- Add the rest of your repository items here -->
    </dict>
    <key>scopeName</key>
    <string>source.fpl</string>
</dict>
</plist>