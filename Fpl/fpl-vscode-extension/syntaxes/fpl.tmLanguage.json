{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Formal Proving Language",
	"patterns": [
		{
			"include": "#longComments"
		},
		{
			"include": "#shortComments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#inbuiltTypes"
		},
		{
			"include": "#predicateIdentifiers"
		},
		{
			"include": "#templates"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		}

	],
	"repository": {
		"longComments": {
			"patterns": [{
				"name": "longComments.fpl comment",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.fpl keyword",
				"match": "\\b(all|and|assert|ass|assume|cases|con|conclusion|dec|declaration|del|delegate|else|end|ex|exn|ext|false|for|iif|impl|in|intrinsic|intr|is|not|or|pre|premise|qed|ret|return|rev|revoke|self|spec|specification|trivial|true|xor)\\b"
			}]
		},
		"inbuiltTypes": {
			"patterns": [{
				"name": "inbuiltType.fpl punctuation",
				"match": "\\b(alias|ax|axiom|cl|class|conj|conjecture|cor|corollary|func|function|ind|index|inf|inference|lem|lemma|loc|localization|mand|mandatory|obj|object|opt|optional|post|postulate|pred|predicate|prf|proof|prop|proposition|thm|theorem|th|theory|uses|undef|undefined)\\b"
			}]
		},
		"templates": {
			"patterns": [{
				"name": "template.fpl entity.name.function",
				"match": "\\b((tpl|template)(\\d*|([A-Z][a-z0-9A-Z_]*)*))\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.fpl variable",
				"match": "[a-z][a-z0-9A-Z_]*"
			}]
		},
		"predicateIdentifiers": {
			"patterns": [{
				"name": "predicateIdentifiers.fpl entity.name.type",
				"match": "[A-Z][a-z0-9A-Z_]*"
			}]
		},
		"shortComments": {
			"patterns": [{
				"name": "shortComments.fpl comment",
				"match": "(//).*\\n?"
			}]
		},
		"strings": {
			"name": "string.fpl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "character.fpl string",
					"match": "."
				}
			]
		}
	},
	"scopeName": "source.fpl"
}