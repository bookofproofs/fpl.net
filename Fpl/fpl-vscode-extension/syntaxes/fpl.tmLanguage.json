{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Formal Proving Language",
	"patterns": [
		{
			"include": "#longComments"
		},
		{
			"include": "#shortComments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#inbuiltTypes"
		},
		{
			"include": "#predicateIdentifiers"
		},
		{
			"include": "#templates"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		}

	],
	"repository": {
		"longComments": {
			"patterns": [{
				"name": "longComments.fpl comment",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.fpl keyword",
				"match": "\\b(all|and|assert|assume|ass|cases|conclusion|con|declaration|dec|delegate|del|end|exn|ex|ext|false|for|iif|impl|in|intrinsic|intr|is|not|or|premise|pre|qed|return|ret|revoke|rev|self|trivial|true|xor)\\b"
			}]
		},
		"inbuiltTypes": {
			"patterns": [{
				"name": "inbuiltType.fpl punctuation",
				"match": "\\b(alias|axiom|ax|class|cl|conjecture|conj|corollary|cor|definition|def|function|func|index|ind|inference|inf|lemma|lem|localization|loc|mandatory|mand|object|obj|optional|opt|postulate|post|predicate|pred|proof|prf|proposition|prop|theorem|thm|uses|undefined|undef)\\b"
			}]
		},
		"templates": {
			"patterns": [{
				"name": "template.fpl entity.name.function",
				"match": "\\b((tpl|template)(\\d*|([A-Z][a-z0-9A-Z_]*)*))\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.fpl variable",
				"match": "[a-z][a-z0-9A-Z_]*"
			}]
		},
		"predicateIdentifiers": {
			"patterns": [{
				"name": "predicateIdentifiers.fpl entity.name.type",
				"match": "[A-Z][a-z0-9A-Z_]*"
			}]
		},
		"shortComments": {
			"patterns": [{
				"name": "shortComments.fpl comment",
				"match": "(//).*\\n?"
			}]
		},
		"strings": {
			"name": "string.fpl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "character.fpl string",
					"match": "."
				}
			]
		}
	},
	"scopeName": "source.fpl"
}