{
  "name": "fpl-vscode-extension",
  "displayName": "FPL (Formal Proving Language)",
  "description": "Write mathematics independently of natural languages.",
  "icon": "images/logo.png",
  "version": "1.2.4",
  "repository": "https://github.com/bookofproofs/fpl.net",
  "publisher": "bookofproofs",
  "license": "MIT",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Other"
  ],
  "keywords": [
    "mathematics",
    "logic",
    "formal",
    "language",
    "proving"
  ],
  "activationEvents": [
    "workspaceContains:**/*.fpl"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fpl",
        "aliases": [
          "Formal Proving Language",
          "fpl",
          "FPL"
        ],
        "extensions": [
          ".fpl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fpl",
        "scopeName": "source.fpl",
        "path": "./syntaxes/fpl.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "dark",
        "uiTheme": "vs-dark",
        "path": "./themes/d-color-theme.json"
      }
    ],
    "commands": [
      {
        "command": "fpl-vscode-extension.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "tar": "^6.1.15",
    "unzipper": "^0.10.14",
    "vscode-languageclient": "^8.1.0"
  }
}
